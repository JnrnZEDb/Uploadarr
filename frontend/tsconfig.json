{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "./build/",
    "types": [
      // The order is very important here, don't sort!
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxtjs/vuetify",
      "@types/node",
      "@types/jest",
      "@types/classnames",
      "nuxt-i18n",
      "vue",
      "@types/webpack-env"
    ],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
